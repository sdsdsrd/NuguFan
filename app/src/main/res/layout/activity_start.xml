<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradation">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="팬이 만드는 모바일 아이돌 퀴즈쇼"
        android:textSize="14dp"
        android:fontFamily="@font/aritabold"
        android:layout_marginTop="269dp"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="4dp"
        android:text="NUGU FAN"
        android:textSize="42dp"
        android:fontFamily="@font/aritabold"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"/>

    <LinearLayout
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="167dp"
        android:layout_below="@+id/textView2">
        
        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/white_line"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시작하기"
            android:textSize="15dp"
            android:fontFamily="@font/aritabold"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/white_line"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/start">
        
        <Button
            android:id="@+id/google"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/g"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/naver"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="14dp"
            android:background="@drawable/white_circle"
            android:textAllCaps="false"
            android:text="N"
            android:textSize="32dp"
            android:fontFamily="@font/aritasemibold"
            android:textColor="#9E6CFB"/>
        <Button
            android:id="@+id/facebook"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="14dp"
            android:background="@drawable/white_circle"
            android:textAllCaps="false"
            android:text="f"
            android:textSize="32dp"
            android:fontFamily="@font/aritasemibold"
            android:textColor="#9E6CFB"/>
        <Button
            android:id="@+id/kakao"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="14dp"
            android:background="@drawable/kakao"
            android:layout_gravity="center"/>
    </LinearLayout>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:background="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"/>

</RelativeLayout>