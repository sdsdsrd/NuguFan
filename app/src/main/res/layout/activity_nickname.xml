<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="172dp"
        android:text="환영합니다!"
        android:textSize="40dp"
        android:fontFamily="@font/aritabold"
        android:textColor="#6469FB"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:text="누구팬에서 사용할\n닉네임을 정해주세요."
        android:textSize="30dp"
        android:lineSpacingExtra="4dp"
        android:fontFamily="@font/aritabold"
        android:textColor="#6469FB"/>
    
    <EditText
        android:id="@+id/editText"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_below="@id/textView2"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:background="#55A26CFB"
        android:paddingLeft="10dp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_below="@id/editText"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:text="이 닉네임으로 시작하기"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:fontFamily="@font/aritamedium"
        android:background="#6A69FB"/>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:background="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"/>

</RelativeLayout>